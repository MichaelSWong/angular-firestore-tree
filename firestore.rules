service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /books/{bookId}{
      allow read: if true;

      match /chapters/{chapterId}{
        allow read: if true;

        match /sections/{sectionId}{
          allow read: if true;
        }
      }
    }
    match /authors/{authorId}{
      allow read: if true;
    }
    match /graphicnovels/{gnId}{
      allow read: if true;
    }
  }
}
